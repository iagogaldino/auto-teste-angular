{
  "name": "auto-unit-test-workspace",
  "private": true,
  "version": "1.0.0",
  "description": "Workspace para backend e frontend com scripts de desenvolvimento em paralelo",
  "workspaces": [
    "backend",
    "frontend",
    "test-angular"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c green,blue \"npm:dev-backend\" \"npm:dev-frontend\"",
    "dev-backend": "npm --workspace backend run dev",
    "dev-frontend": "npm --workspace frontend start",
    "dev:backend": "npm --workspace backend run dev",
    "dev:frontend": "npm --workspace frontend start",
    "build": "npm --workspace frontend run build && npm --workspace backend run build && npm run build:bundle",
    "build:bundle": "shx rm -rf dist && shx mkdir -p dist/backend dist/public && shx cp -r backend/dist/* dist/backend/ && shx cp -r backend/public/* dist/public/",
    "start": "node dist/backend/index.js",
    "package:win": "pkg backend --output dist/auto-unit-test.exe -t node18-win-x64",
    "package:all": "npm run build && npm run package:win",
    "package:all:run": "npm run package:all && start \"\" \"dist\\auto-unit-test.exe\"",
    "install:all": "npm install"
  },
  "bin": "dist/backend/index.js",
  "devDependencies": {
    "concurrently": "^9.0.1",
    "shx": "^0.3.4",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "assets": [
      "dist/frontend/**/*",
      "backend/config.json"
    ],
    "scripts": [
      "dist/backend/**/*.js"
    ],
    "compress": false
  }
}

