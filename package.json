{
  "name": "auto-unit-test-workspace",
  "private": true,
  "version": "1.0.0",
  "description": "Workspace para backend e frontend com scripts de desenvolvimento em paralelo",
  "workspaces": [
    "backend",
    "frontend",
    "test-angular"
  ],
  "scripts": {
    "dev": "concurrently -n backend,frontend -c green,blue \"npm:dev-backend\" \"npm:dev-frontend\"",
    "dev-backend": "npm --workspace backend run dev",
    "dev-frontend": "npm --workspace frontend start",
    "dev:backend": "npm --workspace backend run dev",
    "dev:frontend": "npm --workspace frontend start",
    "build": "npm --workspace backend run build && npm --workspace frontend run build",
    "install:all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}

